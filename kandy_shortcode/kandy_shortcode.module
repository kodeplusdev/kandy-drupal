  // Do not render shortcode when edit page.
  if (arg(0) == 'node' && arg(2) == 'edit') {
    return FALSE;
  }
  if (!empty($attrs)) {
    $result = kandy_setup();
    if ($result['success']) {

      // Init title attribute.
