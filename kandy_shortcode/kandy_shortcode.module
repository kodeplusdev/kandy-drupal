        $title = $attrs['title'];
      }
      else {
        $title = 'My Status';
      }
      // Init class attribute.
      $class = 'kandyStatus ';
      if (isset($attrs['class'])) {
        $class .= $attrs['class'];
      }

      // Init id attribute.
      $id = 'kandy-status' . rand() . ' ';
      if (isset($attrs['id'])) {
