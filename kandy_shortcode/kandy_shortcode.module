      // Init htmlOptions attribute.
      $html_options_attributes = '';

      if (!isset($attrs['style'])) {
        $html_options_attributes = "style = 'width: 100px;'";
      }
      foreach ($attrs as $key => $value) {
        if ($key != "id" && $key != "class" && $key != "title") {
          $html_options_attributes .= $key . "= '" . $value . "'";
